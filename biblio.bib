journal = {Astronomy and Computing},
volume = {12},
pages = {181-190},
year = {2015},
issn = {2213-1337},
doi = {https://doi.org/10.1016/j.ascom.2015.07.002},
url = {https://www.sciencedirect.com/science/article/pii/S2213133715000694},
author = {K. Masui and M. Amiri and L. Connor and M. Deng and M. Fandino and C. Höfer and M. Halpern and D. Hanna and A.D. Hincks and G. Hinshaw and J.M. Parra and L.B. Newburgh and J.R. Shaw and K. Vanderlinde},
