@article{chauvenet,
doi = {10.3847/1538-4365/aad23d},
url = {https://doi.org/10.3847/1538-4365/aad23d},
year = 2018,
month = {aug},
journal = {The Astrophysical Journal Supplement Series},
publisher = {American Astronomical Society},
volume = {238},
number = {1},
pages = {2},
author = {M. P. Maples and D. E. Reichart and N. C. Konz and T. A. Berger and A. S. Trotter and J. R. Martin and D. A. Dutton and M. L. Paggen and R. E. Joyner and C. P. Salemi},
title = {Robust Chauvenet Outlier Rejection},
abstract = {Sigma clipping is commonly used in astronomy for outlier rejection, but the number of standard deviations beyond which one should clip data from a sample ultimately depends on the size of the sample. Chauvenet rejection is one of the oldest, and simplest, ways to account for this, but, like sigma clipping, it depends on the sample’s mean and standard deviation, neither of which are robust quantities: both are easily contaminated by the very outliers they are being used to reject. Many, more robust measures of central tendency, and of sample deviation, exist, but each has a trade-off with precision. Here we demonstrate that outlier rejection can be both very robust and very precise if decreasingly robust but increasingly precise techniques are applied in sequence. To this end, we present a variation on Chauvenet rejection that we call “robust” Chauvenet rejection (RCR), which uses three decreasingly robust/increasingly precise measures of central tendency and four decreasingly robust/increasingly precise measures of sample deviation. We show this sequential approach to be very effective for a wide variety of contaminant types, even when a significant—even dominant—fraction of the sample is contaminated, and especially when the contaminants are strong. Furthermore, we have developed a bulk-rejection variant, to significantly decrease computing times, and RCR can be applied both to weighted data and when fitting parameterized models to data. We present aperture photometry in a contaminated, crowded field as an example. RCR may be used by anyone at https://skynet.unc.edu/rcr, and source code is available there as well.}
}


@inproceedings{sri2021,
author = {Debionne, S. and Homs, A. and Claustre, L. and Kieffer, J. and De Sanctis, D. and Santoni, G. and Goetz, A. and Meyer, J.}, 
title = {LImA2, a distributed acquisition system for the new ESRF-EBS Serial-MX 
beamline}, 
abstract = {With the advance of modular X-ray detector in terms of frame rate and 
size, the need for a scalable and portable Data Acquisition System (DAQ) 
to deal with the ever increasing data bandwidth is ubiquitous. 
Similarly, the extremely high data rates put limits on Data Storage that 
require Online Data Analysis (ODA) and Reduction (ODR).
In this work, we introduce LImA2, a distributed evolution of LImA[1], 
developed for the new ESRF-EBS Serial-MX beamline ID29. At ID29, the 
detector chosen, a PSI JungFrau-4M detector[2], is capable of generating 
up to 18.4 GB/s of raw data. In order to cope with this throughput, the 
data have to be reduced in real-time before they can be written to 
permanent storage. A dedicated processing data flow has been developed 
for both the detector specific frame reconstruction and the integration 
of online data reduction based on azimuthal integration[3] and 
Bragg-peak finding.
LImA2 is a distributed MPI application with control and data receivers 
processes that collaborate to perform the acquisition and the online 
processing. Scalability is achieved with increasing the number of 
receivers, eventually distributed on multiple computers. We support two 
configurations/topologies: partial frame dispatch (one receiver per 
detector module) and full frame dispatch (one receiver acquires a full 
detector frame).
Data receivers have two responsibilities: 1. DAQ, implemented on top of 
the vendor SDK with respect to the technology used (sockets, DPDK, 
RoCE); 2. ODA, instantiate a choice of processing graph, parallelizing 
and delegating to hardware accelerators tasks such as feature extraction 
and data visualization. Different accelerators are supported. For ID29, 
GPUs are used to perform gain/pedestal correction and azimuthal 
integration to generate the reduced dataset and IBM Power9 NX 
accelerators perform GZIP compression in real-time.},
booktitle = {Proceedings of the $14^{th}$ international conference on Synchrotron Radiation Instrumentation (SRI2021)}, 
year = 2022,
url = {https://indico.desy.de/event/27430/abstracts/}
}

